@model TicketingSystem.Models.BusTrip

@section Scripts{
    
}

<div class="panel panel-default">
    <div class="panel-heading" style="font-size:18px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
        Trip Information
    </div>
    <div class="panel-body">

        <!--Bus Info-->
        <div style="padding-bottom:10px; border-bottom:1px solid #808080">
            <img src="data:image;base64,@Convert.ToBase64String(Model.BusInfos.BusCompanyLogo)" alt="Model.BusInfos.BusCompanyName Logo" style="max-width:60px; max-height:60px; margin-left:0px; min-height:60px; min-width:60px;" />
            <span style="color:#fb6830; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; margin-left:10px; font-size:20px; font-weight:bold;">@Html.DisplayFor(model => model.BusInfos.BusCompanyName)</span>
        </div>

        <!--Date & Time Info-->
        <div style="display:flex; flex-direction:row;margin-top:15px; border-bottom:1px solid #808080; padding-bottom:10px;">
            <!--First column-->
            <div>
                <div style="display:flex; flex-direction:row; ">
                    <div>
                        <img src="~/Content/Images/calendarIcon.png" style="max-width:30px; max-height:50px; padding-right:10px; margin-top:10px;" />
                    </div>

                    <div>

                        <div style="color:#909090; margin-top:3px;">
                            @Html.DisplayNameFor(model => model.DepartureDate)
                            :
                        </div>

                        <div style="font-size:15px; font-weight:bold; font-family:Arial; padding-bottom:5px;">
                            @Html.DisplayFor(model => model.DepartureDate)
                        </div>
                    </div>

                </div>

            </div>

            <!--Second Column-->
            <div style="margin-left:50px;">
                <div style="display:flex; flex-direction:row;">
                    <div>
                        <img src="~/Content/Images/timeIcon.png" style="max-width:30px; max-height:40px; padding-right:10px; margin-top:10px;" />
                    </div>

                    <div>
                        <div style="color:#909090;">
                            @Html.DisplayNameFor(model => model.DepartureTime)
                            :
                        </div>

                        <div style="font-size:15px; font-weight:bold; font-family:Arial;">
                            @Html.DisplayFor(model => model.DepartureTime)
                        </div>
                    </div>
                </div>
            </div>

        </div>



        <!--Origin & Destination Info-->
        <div style="display:flex; flex-direction:row;margin-top:15px; padding-bottom:5px;">
            <!--First column-->
            <div>
                <div style="display:flex; flex-direction:row">
                    <div>
                        <img src="~/Content/Images/mapLocationIcon.png" style="max-width:35px; max-height:35px; padding-right:10px; margin-top:8px;" />
                    </div>
                    <div>
                        <div style="color:#909090;">
                            @Html.DisplayNameFor(model => model.OriginPlace)
                            :
                        </div>

                        <div style="font-size:15px; font-weight:bold; font-family:Arial;width:150px ; word-break: break-all;">
                            @Html.DisplayFor(model => model.OriginPlace.OriginPlaceName)
                        </div>
                    </div>
                </div>

            </div>

            <!--Second Column-->
            <div style="margin-left:30px;">
                <div>
                    <div style="color:#909090;">
                        @Html.DisplayNameFor(model => model.DestinationPlace.DestinationPlaceName)
                        :
                    </div>

                    <div style="font-size:15px; font-weight:bold; font-family:Arial; width:150px ; word-break: break-all;">
                        @Html.DisplayFor(model => model.DestinationPlace.DestinationPlaceName)
                    </div>

                </div>


            </div>

        </div>
    </div>

</div>


