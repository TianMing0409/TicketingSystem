@foreach (var item in Model)
{
    <div class="list-box">

        <div style=" font-size:15px; width:100px; text-align:center; margin-left:5px;color:black;">
            @Html.DisplayFor(modelItem => item.BookingId)
        </div>

        <div style="display:flex; flex-direction:column; color:black;">
            <div style=" max-width:70px; max-height: 70px; position:relative ;left:25px; width:70px; height:70px;">
                <img src="data:image;base64,@Convert.ToBase64String(item.BusCompanyLogo)" alt="@item.BusCompanyName Logo" style="max-width:70px; max-height:70px;" />
            </div>

            <div style="width:120px; margin-top:10px; text-align:center; font-size:12px;">
                @Html.DisplayFor(modelItem => item.BusCompanyName)
            </div>
        </div>

        <div style="display:flex; flex-direction:column; margin-left:10px;">
            <div style=" font-size:15px; text-align:center;color:black; margin-top:20px; font-family:Arial;">
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </div>

            <div style="font-size:15px; color:black;  margin-top:10px;width:100px; margin-left:35px;font-family:Arial;">
                @Html.DisplayFor(modelItem => item.DepartureTime)
            </div>
        </div>


        <div style="font-size:15px; width:160px; align-items: center; word-break: break-all; text-align:center;color:black; font-family:Arial; padding-right:5px;">
            @Html.DisplayFor(modelItem => item.OriginPlace)
        </div>
        <span class="glyphicon glyphicon-arrow-right" style="font-size:21px; margin-right:10px;"></span>
        <div style="font-size:15px; width:160px; align-items: center; word-break: break-all;text-align:center;color:black; font-family:Arial;">
            @Html.DisplayFor(modelItem => item.DestinationPlace)
        </div>

        <div style=" width:100px; font-weight:bold; font-weight:bold;margin-left:30px ; font-size:18px; color:black; position:relative;left:20px;color:black;">
            @("RM " + Html.DisplayFor(modelItem => item.PaymentAmount))
        </div>

        <div style=" font-size:15px; width:100px; text-align:center; margin-left:70px;color:black;font-family:Arial;">
            @Html.DisplayFor(modelItem => item.BookingDate)
        </div>

    </div>
}