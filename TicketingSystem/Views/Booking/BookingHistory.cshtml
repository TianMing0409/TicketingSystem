@model IEnumerable<TicketingSystem.ViewModels.BookingHistoryViewModel>

@{
    ViewBag.Title = "BookingHistory";
}

<h2>Booking History</h2>

<table class="table">
    <tr>

        <th style="position:relative; left: 43px;">
            @Html.DisplayNameFor(model => model.BookingId)
        </th>
        <th style="position:relative; left:25px;">
            @Html.Raw("Bus")
        </th>
        <th style="position:relative; left:30px;">
            @Html.Raw("Depature Date & Time")
        </th>

        <th style=" position:relative; left:-70px;">
            @Html.Raw("From")
        </th>
        <th style=" position:relative; left:20px;">
            @Html.Raw("To")
        </th>

        <th style="position:relative; left:90px;">
            @Html.DisplayNameFor(model => model.PaymentAmount)
        </th>

        <th style="position:relative; left:20px;">
            @Html.DisplayNameFor(model => model.BookingDate)
        </th>
    </tr>
</table>

