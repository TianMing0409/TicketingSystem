@model TicketingSystem.Models.BusTrip

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>BusTrip</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.BusInfos.BusCompanyName, "Bus Company Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BusInfos.BusCompanyName, new SelectList(new[]
                {
                    new {Text = "KKKL Express", Value = "KKKL Express"},
                    new {Text = "Warisan Express", Value = "Warisan Express"},
                    new {Text = "Billion Stars Express", Value = "Billion Stars Express"},
                    new {Text = "Mayang Sari Express", Value = "Mayang Sari Express"},
                    new {Text = "V Express", Value = "V Express"},
                    new {Text = "Yellow Star Express", Value = "Yellow Star Express"}
            }, "Value", "Text"), new { @class = "dropdownlist-height" })

                @Html.ValidationMessageFor(model => model.BusInfos.BusCompanyName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BusInfos.BusPlateNo, "Bus Plate No.", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BusInfos.BusPlateNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BusInfos.BusPlateNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BusInfos.BusCompanyLogo, "Bus Company Logo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="busCompanyLogo" id="busCompanyLogo" />
                <img id="imagePreview" src="~/Content/Images/previewImageIcon.png" alt="Image preview" style="max-width: 200px; max-height: 200px;" />
                @Html.ValidationMessageFor(model => model.BusInfos.BusCompanyLogo, "", new { @class = "text-danger" })


            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OriginPlaceId, "OriginPlaceId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OriginPlaceId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OriginPlaceId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DestinationPlaceId, "DestinationPlaceId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DestinationPlaceId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DestinationPlaceId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartureDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="has-feedback">
                    <input type="text" id="departureDate" name="departureDate" class="form-control">
                    <span class="form-control-feedback" style="left:240px;"><i class="glyphicon glyphicon-calendar"></i></span>
                    @Html.ValidationMessageFor(model => model.DepartureDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReturnDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="returnDate" name="returnDate" class="form-control">
                <span class="form-control-feedback" style="left:240px;"><i class="glyphicon glyphicon-calendar"></i></span>
                @Html.ValidationMessageFor(model => model.ReturnDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartureTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.DepartureTime, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.DepartureTime, new SelectList(new[]
    {
                              new {Text = "8:00 AM", Value = "8:00 AM"},
               new {Text = "8:30 AM", Value = "8:30 AM"},
               new {Text = "9:00 AM", Value = "9:00 AM"},
               new {Text = "9:30 AM", Value = "9:30 AM"},
               new {Text = "10:00 AM", Value = "10:00 AM"},
               new {Text = "10:30 AM", Value = "10:30 AM"},
               new {Text = "11:00 AM", Value = "11:00 AM"},
               new {Text = "11:30 AM", Value = "11:30 AM"},
               new {Text = "1:00 PM", Value = "1:00 PM"},
               new {Text = "2:00 PM", Value = "2:00 PM"},
               new {Text = "3:00 PM", Value = "3:00 PM"},
               new {Text = "4:00 PM", Value = "4:00 PM"},
               new {Text = "5:00 PM", Value = "5:00 PM"},
               new {Text = "6:00 PM", Value = "6:00 PM"},
               new {Text = "7:00 PM", Value = "7:00 PM"},
               new {Text = "8:00 PM", Value = "8:00 PM"},
               new {Text = "9:00 PM", Value = "9:00 PM"}
    }, "Value", "Text"), new { @class = "dropdownlist-height" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SeatAvailable, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SeatAvailable, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SeatAvailable, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/smoothness/jquery-ui.css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>
    <script src="~/Scripts/App/Custom.js"></script>
}
