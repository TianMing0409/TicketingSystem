@model TicketingSystem.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div style="display:flex; flex-direction:row; margin-bottom:17px;">
    <!-- First column-->
    <div style="background-image:url('/Content/Images/signUpImage.jpg');  background-repeat: no-repeat; width:420px; height:460px; margin-top:80px; margin-left:60px; border-radius:15px;">
   
    </div>

    @*<div style="border-left:3px solid black; height:547px; width:0px; margin-top:5px; margin-bottom:5px; margin-left:60px;"></div>*@

    <!--Second column-->
    <div style="margin-left:110px;">
        <h1 style=" margin-left:90px; margin-top:30px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Create New Account</h1>
        <div class="panel panel-default" style="width: 450px; margin-left:30px; margin-top:30px;  border-radius:10px; box-shadow: 0 0 10px rgb(128, 128, 128);">

            @*<div class="panel-heading" style="font-weight: bold; text-align:center; font-size:20px; font-family:Bahnschrift; border-top-left-radius:10px; border-top-right-radius:10px; background-color:#b7d9f2;">@ViewBag.Title</div>*@

            <div class="panel-body" style=";margin-left:20px;">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.LabelFor(m => m.FirstName, new { style = "" })
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-address-card"></i></span>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", style = "width:340px; max-width:340px;", placeholder = "Please enter your First Name" })
                            </div> 
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    @Html.LabelFor(m => m.LastName, new { style = "" })
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-address-card-o"></i></span>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", style = "width:340px; max-width:340px;", placeholder = "Please enter your Last Name" })
                            </div> 
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.LabelFor(m => m.Gender, new { style = "" })
                    <div class="form-group">
                        <div class="radio-buttons-horizontal">
                            <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, "Male") Male</label>
                            <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, "Female") Female</label>
                            <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, "Other") Other</label>
                        </div>
                        <div class="col-md-10">
                            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.LabelFor(m => m.PhoneNumber, new { style = "" })
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", style = "width:340px; max-width:340px;", placeholder = "Please enter your Phone Number" })
                            </div>
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    @Html.LabelFor(m => m.Email, new { style = "" })
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "width:340px; max-width:340px;", placeholder = "Please enter your email" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.LabelFor(m => m.Password)
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width:340px; max-width:340px;", placeholder = "Please enter your password" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.LabelFor(m => m.ConfirmPassword, new { style = "width:200px;" })
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "width:340px; max-width:340px;", placeholder = "Please re-enter your password" })
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group" style="margin-top:40px;">
                        <div class="col-md-10">
                            <input type="submit" value="Register" class="btn btn-default" style="background-color:#0069dc; color:white; font-weight:bold; width:380px;max-width:430px; height:40px; border-radius:5px; font-size:17px;" />
                        </div>
                    </div>

                    <p style="margin-left:70px; margin-top:35px; ">
                        Already have an account? @Html.ActionLink("Login now", "Login", null, new { style = "color:blue; font-weight:bold;" })
                    </p>

                }
            </div>
        </div>

    </div>
</div>


