@using TicketingSystem.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div style="display:flex; flex-direction:row;">
    <!-- First column-->
    <div>
        <h1 style="margin-left:100px; margin-top:30px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Good to see you again</h1>
        <div class="panel panel-default" style="width: 500px; height: 400px; margin-left:30px; margin-top:30px;  border-radius:10px; box-shadow: 0 0 10px rgb(128, 128, 128);">

            <div class="panel-heading" style="font-weight: bold; text-align:center; font-size:20px; font-family:Bahnschrift; border-top-left-radius:10px; border-top-right-radius:10px; background-color:#b7d9f2;">@ViewBag.Title</div>

            <div class="panel-body" style="margin-top:20px;margin-left:20px;">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email", style = "height:40px; width:390px; max-width:390px; font-size:16px;" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="margin-top:30px;">
                        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password", style = "height:40px; width:390px; max-width:390px; font-size:16px;" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="margin-top:-10px;">
                        <div class="col-md-10" style="margin-left:20px;">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe, new { style = "margin-left:-10px;" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="margin-top:30px;">
                        <div class="col-md-10">
                            <input type="submit" value="Log in" class="btn btn-default" style="background-color:#ff6a00; color:white; font-weight:bold; width:430px;max-width:430px; height:40px; border-radius:5px; font-size:15px;" />
                        </div>
                    </div>

                    @*<p style="margin-left:90px; margin-top:40px;">
                @Html.ActionLink("Register as a new user", "Register")
            </p>*@
                }
            </div>
        </div>

    </div>
    <div style="border-left:3px solid black; height:547px; width:0px; margin-top:5px; margin-bottom:5px; margin-left:60px;"></div>

    <!--Second column-->
    <div style="background-image:url('/Content/Images/loginBackground.jpg'); width:490px; height:500px; margin-top:30px; margin-left:90px; border-radius:15px;">
        <h1 style="text-align:center; font-family:Georgia; color:white; margin-top:80px; font-size:45px;">
            New Here?
        </h1>

        <h3 style="padding-left:10px; padding-right:10px; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; color:white; margin-top:60px; margin-left:35px;">
            Sign up and and discover a great amount of trips!
        </h3>
        
        @Html.ActionLink("Sign Up", "Register", null, new { @class = "button-link", style = "margin-left:130px; margin-top:70px;"})

    </div>
</div>



